@page "/register"
@using MotorShop.Front.Models;


<PageTitle>Motors Shop - Cadastro</PageTitle>

<div class="d-flex flex-column gap-2 w-100 bg-white px-3 py-4 border border-white rounded-3">
    <h1>Cadastrar</h1>
    <EditForm Model="@registerModel" OnValidSubmit="@HandleSubmit">
        <DataAnnotationsValidator />
        <div class="d-flex flex-column gap-2 w-100 mb-3">
            <label>Nome</label>
            <input class="p-2 border border-2 rounded-3" type="text" placeholder="Digite seu nome" @bind-value="registerModel.FirstName" />
            <ValidationMessage For="@(() => registerModel.FirstName)" />
        </div>
        <div class="d-flex flex-column gap-2 w-100 mb-3">
            <label>Sobrenome</label>
            <input class="p-2 border border-2 rounded-3" type="text" placeholder="Digite seu sobrenome" @bind-value="registerModel.LastName" />
            <ValidationMessage For="@(() => registerModel.LastName)" />
        </div>
        <div class="d-flex flex-column gap-2 w-100 mb-3">
            <label>Email</label>
            <input class="p-2 border border-2 rounded-3" type="text" placeholder="Digite seu email" @bind-value="registerModel.EmailAddress" />
            <ValidationMessage For="@(() => registerModel.EmailAddress)" />
        </div>
        <div class="d-flex flex-column gap-2 w-100 mb-3">
            <label>Senha</label>
            <input class="p-2 border border-2 rounded-3" type="password" placeholder="Digite sua senha" @bind-value="registerModel.Password" />
            <ValidationMessage For="@(() => registerModel.Password)" />
        </div>       

        <button class="w-100 text-center bg-primary border border-0 rounded-3 py-2 text-white fs-3" type="submit">Entrar</button>
        <p class="text-black-50 fs-5 text-center py-4">Já possui uma conta?</p>
        <a class="text-decoration-none w-100 text-center bg-white border border-2 rounded-3 py-2 text-black-50 fs-3" type="submit" href="/login">Voltar para o login</a>
    </EditForm>

</div>

@code {
    private RegisterModel registerModel = new();

    private void HandleSubmit()
    {
        Console.WriteLine($"Nome: {registerModel.FirstName}");
        Console.WriteLine($"Sobrenome: {registerModel.LastName}");
        Console.WriteLine($"Email: {registerModel.EmailAddress}");                
        Console.WriteLine($"Senha: {registerModel.Password}");
    }       
}
